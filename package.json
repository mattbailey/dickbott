{
  "name": "dickbott",
  "version": "1.0.0",
  "main": "lib/index.js",
  "author": "Matt Bailey <m@mdb.io>",
  "license": "MIT",
  "repository": "https://github.com/mattbailey/dickbott.git",
  "scripts": {
    "prestart": "git log -1 --oneline --no-color > BOT_RELEASE",
    "test:eslint": "eslint lib",
    "start": "node lib/index.js",
    "precommit": "lint-staged",
    "develop": "nodemon -w lib -x forever lib/index.js"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "all",
          "semi": false
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "eslint lib",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-plugin-prettier": "^2.2.0",
    "forever": "^0.15.3",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.11.0",
    "prettier": "^1.6.1"
  },
  "dependencies": {
    "figlet": "alavers/figlet.js#c79da1bd0fed9c410d289b989876433714cbf076",
    "slackbots": "^1.0.2"
  }
}
